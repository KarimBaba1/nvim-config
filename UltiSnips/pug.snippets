snippet data-submenu-edit-one-value "data-submenu-edit-one-value" b
data-submenu={
	mixin: "p-edit-one-value",
	data: {
		url: `\${baseUrl}/...post url...`,
		value: "current value",
		type: "text",
		name: `Input name`,
	},
}
endsnippet

snippet data-submenu "data-submenu" b
data-submenu={
	mixin: "p-edit-one-value",
	data: {
		url: `\${baseUrl}/submiturl`,
		value: "currentvalue",
		type: "text",
		name: "Item name",
	},
}
endsnippet

snippet post-btn "post-btn" b
+post-btn({
	url: \`\${baseUrl}/update\`,
	data: {},
	confirm: "Are you sure?",
	label: "Submit",
}).btn1
endsnippet

snippet __ "__" b
__("$0")
endsnippet
